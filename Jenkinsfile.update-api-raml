elifeUpdatePipeline(
    { commit ->
        sh "pip install"
        sh "bin/update " + (params.commit ?: "")
        sh "git add --all ."
    },
    {
        def subrepositorySummary = elifeGitSubrepositorySummary 'api-raml'
        return "Updated api-raml to ${subrepositorySummary}"
    },
    'update_api_raml/',
    true
)
